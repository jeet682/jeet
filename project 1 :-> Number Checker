                                                  // JAVASCRIPT FILE 


function runCheck() {
      var Number = parseInt(document.getElementById("num").value);
      const result = document.getElementById("result");

      if (isNaN(Number)) {
        result.textContent = "Please enter a valid number.";
        return;
      }

      if (Number < 2) {
        result.textContent = "Not a Prime number";
        return;
      }
      if (Number == 2) {
        result.textContent = Number + " is the smallest prime and even number";
        return;
      }
      for (var i = 2; i < Number; i++) {
        if (Number % i == 0) {
          result.textContent = "Not a Prime number. " + i + " is a factor of " + Number;
          return;
        }
      }
      result.textContent = Number + " is a Prime number";
    }

    // Button click
    document.getElementById("checkBtn").addEventListener("click", runCheck);

    // Enter key press
    document.getElementById("num").addEventListener("keydown", function(event) {
      if (event.key === "Enter") {
        runCheck();
      }
    });



                                                  
