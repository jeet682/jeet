                                   // JAVASCRIPT CODE 



let display = document.getElementById("display");

// Add click event to ALL buttons
let buttons = document.querySelectorAll("button");

buttons.forEach(btn => {
    btn.addEventListener("click", () => {
        let value = btn.textContent;

        if (value === "C") {
            display.value = "";
        } 
        else if (value === "‚å´") {
            display.value = display.value.slice(0, -1);
        }
        else if (value === "üü∞") {
            display.value = eval(display.value.replace("‚ûó", "/").replace("‚úñÔ∏è", "*").replace("‚ûñ", "-").replace("‚ûï", "+"));
        }
        else if (value === "+/-") {
            display.value = display.value * -1;
        }
        else {
            display.value += value
                .replace("‚ûó", "/")
                .replace("‚úñÔ∏è", "*")
                .replace("‚ûñ", "-")
                .replace("‚ûï", "+");
        }
    });
});
